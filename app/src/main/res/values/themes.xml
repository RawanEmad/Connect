<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Connect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_60</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayouts" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeColor">@color/light_white_40</item>
        <item name="boxStrokeWidth">0.8dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="startIconTint">@color/white_70</item>
        <item name="endIconTint">@color/white_70</item>
        <item name="android:textColorHint">@color/white_70</item>
        <item name="hintTextColor">@color/white_70</item>
    </style>

    <style name="TextInputLayout.DropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeColor">@color/light_white_40</item>
        <item name="boxStrokeWidth">0.8dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="startIconTint">@color/white_70</item>
        <item name="endIconTint">@color/white_70</item>
        <item name="android:textColorHint">@color/white_70</item>
        <item name="hintTextColor">@color/white_70</item>
    </style>
</resources>